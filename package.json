{
    "name": "@doist/todoist-integrations-common-ts",
    "version": "0.1.14",
    "description": "A package for sharing common code between Todoist quickadd integrations.",
    "license": "MIT",
    "author": "Doist developers",
    "repository": "git@github.com:doist/todoist-integrations-common-ts.git",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist",
        "lint": "eslint ./src --ext ts",
        "prettify": "npx prettier --write \"./**/*.{ts,json,md,yml,babelrc}\"",
        "test": "jest",
        "audit": "npm audit --audit-level=moderate",
        "build": "npx tsc -p tsconfig.json",
        "CI": "npm-run-all prettify lint audit test build",
        "prepublishOnly": "npm-run-all prettify lint test",
        "prepare": "npm run build"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "url-join": "^4.0.1",
        "uuid": "^8.2.0"
    },
    "devDependencies": {
        "@doist/prettier-config": "^3.0.5",
        "@types/axios": "^0.14.0",
        "@types/jest": "^26.0.4",
        "@types/url-join": "^4.0.0",
        "@types/uuid": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-mock-extended": "^1.0.9",
        "jest-theories": "^1.2.0",
        "lint-staged": "^10.2.11",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.1",
        "typescript": "^3.7.5"
    },
    "prettier": "@doist/prettier-config",
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged && npm run build"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": "eslint --fix",
        "*.{ts,tsx,json,html,yml,yaml,md}": "prettier --check"
    },
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js",
        "!dist/**/*.test.d.ts"
    ]
}
